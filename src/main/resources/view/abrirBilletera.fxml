<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="40.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.uniquindio.application.controllers.AbrirBilleteraController">
   <padding>
      <Insets top="60.0" right="60.0" bottom="60.0" left="60.0"/>
   </padding>
   <children>
      <Label text="BIENVENIDO A SU BILLETERA">
         <font>
            <Font name="Playbill" size="36.0" />
         </font>
      </Label>
      <Label text="Ingrese el saldo que desea recargar">
         <font>
            <Font size="20.0"/>
         </font>
      </Label>
      <TextField fx:id="txtSaldo" maxWidth="300.0" prefWidth="300.0" style="-fx-font-size: 18px;"/>
      <HBox alignment="CENTER" spacing="40.0">
         <children>
            <Button mnemonicParsing="false" onAction="#recargarSaldo" text="Recargar" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 30;"/>
            <Button mnemonicParsing="false" onAction="#consultarSaldo" text="Consultar" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 30;"/>
         </children>
      </HBox>
   </children>
</VBox>
