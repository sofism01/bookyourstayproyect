<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.uniquindio.application.controllers.AdministrarCuentaController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="TOP_CENTER" spacing="20" prefWidth="600.0" prefHeight="400.0">
        <Label text="Editar Datos" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
        <GridPane alignment="CENTER"
                  layoutX="50" layoutY="50"
                  prefWidth="500" prefHeight="300"
                  hgap="20" vgap="20">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="Cédula:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtCedula" promptText="Cédula" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNombre" promptText="Nombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Apellido:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtApellido" promptText="Apellido" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Teléfono:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtTelefono" promptText="Teléfono" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtEmail" promptText="Email" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
        <Button text="Confirmar" fx:id="btnConfirmar" prefWidth="150" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#confirmarEdicion" />
        <Button text="Cerrar Sesion"  prefWidth="150" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#cerrarSesion" />
        <Button text="Eliminar cuenta"  prefWidth="150" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#eliminarCuenta" />
    </VBox>
</AnchorPane>
